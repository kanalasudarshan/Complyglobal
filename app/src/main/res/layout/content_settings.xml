<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.Settings"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:paddingLeft="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="1"
            android:background="@drawable/style_border_layout">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:text="Notification Time 1"
                    android:textColor="@color/colorApp"
                    android:gravity="center_vertical"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/notification_switch_one"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:checked="true"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="100dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1"
                android:id="@+id/change_notification_time_one"
                android:background="@color/transparent"
                android:gravity="center">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/notification_one_hours"
                        android:text="6"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:background="@color/colorLight"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/notification_one_minuts"
                        android:text="30"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:background="@color/colorLight"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/notification_one_ampm"
                        android:text="AM"
                        android:gravity="center_vertical|center"
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorLight"
                        android:textColor="@color/white"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="1"
            android:background="@drawable/style_border_layout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:text="Notification Time 2"
                    android:textColor="@color/colorApp"
                    android:gravity="center_vertical"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/notification_switch_two"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:checked="true"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="100dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1"
                android:background="@color/transparent"
                android:id="@+id/change_notification_time_two"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:background="@color/colorLight"
                    android:textColor="@color/white"
                    android:id="@+id/notification_two_hours" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:text="30"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:background="@color/colorLight"
                    android:textColor="@color/white"
                    android:id="@+id/notification_two_minuts" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:text="PM"
                    android:gravity="center_vertical|center"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorLight"
                    android:textColor="@color/white"
                    android:id="@+id/notification_two_ampm" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>