<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1b75b1</item>
        <item name="colorPrimaryDark">#1b75b1</item>
        <item name="colorAccent">#1b75b1</item>

        <item name="android:colorControlHighlight">#801b75b1</item>
    </style>

    <style name="SubActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1b75b1</item>
        <item name="colorPrimaryDark">#1b75b1</item>
        <item name="colorAccent">#1b75b1</item>

        <item name="android:colorControlHighlight">#801b75b1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.CustomTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
