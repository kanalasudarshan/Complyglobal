<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dashboard"
    android:orientation="vertical"
    android:background="@color/layout_background"
    tools:context=".fragment.DashboardFragment">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp">
        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="289dp"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:elevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="NON COMPLIANCE STATS"
                    android:textSize="19sp"
                    android:textColor="#1b75b1"
                    android:textStyle="bold"
                    android:linksClickable="false"
                    android:longClickable="false"
                    android:nestedScrollingEnabled="false"
                    android:gravity="fill_vertical"
                    android:paddingLeft="10dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/non_compliance_stats_barchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="289dp"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:elevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="COMPLIANCE TREND"
                    android:textSize="19sp"
                    android:textColor="#1b75b1"
                    android:textStyle="bold"
                    android:linksClickable="false"
                    android:longClickable="false"
                    android:nestedScrollingEnabled="false"
                    android:gravity="fill_vertical"
                    android:paddingLeft="10dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/compliance_trend_barchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="289dp"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:elevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="YTD COMPLIANCE STATUS"
                    android:textSize="19sp"
                    android:textColor="#1b75b1"
                    android:textStyle="bold"
                    android:linksClickable="false"
                    android:longClickable="false"
                    android:nestedScrollingEnabled="false"
                    android:gravity="fill_vertical"
                    android:paddingLeft="10dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/ytd_compliance_piechart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
